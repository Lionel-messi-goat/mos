<body>
    <div class="container">
        <div class="header">
            <h1>미니 금고 제어 시스템</h1>
            <p>금고 상태를 모니터링하고 제어합니다.</p>
        </div>

        <div class="row">
            <!-- 센서 데이터 카드 -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        센서 데이터
                    </div>
                    <div class="card-body">
                        <p><strong>온도:</strong> <span id="temperature">-</span> °C</p>
                        <p><strong>습도:</strong> <span id="humidity">-</span> %</p>
                        <p><strong>금고와의 거리:</strong> <span id="distance">-</span> cm</p>
                    </div>
                </div>
            </div>

            <!-- 재고 관리 카드 -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        재고 관리
                    </div>
                    <div class="card-body">
                        <ul id="inventory-list" class="list-group">
                            <!-- 재고 목록이 여기 표시됩니다 -->
                        </ul>
                        <form id="inventory-form" class="mt-3">
                            <div class="mb-2">
                                <label for="item-name" class="form-label">항목 이름</label>
                                <input type="text" id="item-name" class="form-control" required>
                            </div>
                            <div class="mb-2">
                                <label for="item-quantity" class="form-label">수량</label>
                                <input type="number" id="item-quantity" class="form-control" required>
                            </div>
                            <button type="submit" class="btn btn-primary">추가/수정</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- 실시간 스트리밍 카드 -->
        <div class="card">
            <div class="card-header bg-warning text-dark">
                실시간 영상 스트리밍
            </div>
            <div class="card-body video-container">
                <img id="video-stream" src="/video_feed" class="img-fluid rounded shadow" alt="Live Stream">
            </div>
        </div>
    </div>

    <footer>
        <p>© 2024 미니 금고 제어 시스템</p>
    </footer>

    <script>
        // 센서 데이터 업데이트
        function updateData() {
            fetch('/data')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('temperature').innerText = data.temperature || 'N/A';
                    document.getElementById('humidity').innerText = data.humidity || 'N/A';
                    document.getElementById('distance').innerText = data.distance ? data.distance.toFixed(2) : 'N/A';
                })
                .catch(err => console.error('센서 데이터 로드 오류:', err));
        }

        // 재고 데이터 가져오기
        function loadInventory() {
            fetch('/inventory')
                .then(response => response.json())
                .then(data => {
                    const inventoryList = document.getElementById('inventory-list');
                    inventoryList.innerHTML = '';
                    data.forEach(item => {
                        const listItem = document.createElement('li');
                        listItem.className = 'list-group-item d-flex justify-content-between align-items-center';
                        listItem.innerText = `${item.name}`;
                        const badge = document.createElement('span');
                        badge.className = 'badge bg-primary rounded-pill';
                        badge.innerText = item.quantity;
                        listItem.appendChild(badge);
                        inventoryList.appendChild(listItem);
                    });
                })
                .catch(err => console.error('재고 데이터 로드 오류:', err));
        }

        // 재고 추가/수정
        document.getElementById('inventory-form').addEventListener('submit', event => {
            event.preventDefault();
            const name = document.getElementById('item-name').value;
            const quantity = parseInt(document.getElementById('item-quantity').value);
            fetch('/inventory', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ name, quantity })
            })
                .then(response => {
                    if (response.ok) {
                        loadInventory();
                        document.getElementById('inventory-form').reset();
                    } else {
                        console.error('재고 업데이트 실패');
                    }
                })
                .catch(err => console.error('재고 업데이트 오류:', err));
        });

        // 주기적으로 데이터 업데이트
        setInterval(updateData, 3000);
        loadInventory();
    </script>
</body>
